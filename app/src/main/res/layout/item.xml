<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    android:id="@+id/item_food"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ma_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:text="Mã sinh viên: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/tv_ten_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Tên: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/tv_gioi_tinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Giới tính: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/tv_ngay_sinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Ngày sinh: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/tv_khoa_hoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Khóa học: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/tv_lop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Lớp: "
                android:maxLines="1"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:background="#00000000"
                android:src="@drawable/editing"/>
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:background="#00000000"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66000000"/>
</LinearLayout>